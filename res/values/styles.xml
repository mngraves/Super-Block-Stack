<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="mainVerticalLayout">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:orientation">vertical</item>
		<item name="android:background">@drawable/tetrismainscreenbg</item>	
	</style>
	<style name="scoreTableHeadText" parent="@android:style/TextAppearance">
		<item name="android:layout_margin">1px</item>
		<item name="android:padding">1px</item>
		<item name="android:layout_width">fill_parent</item> 
		<item name="android:layout_weight">1</item>
		<item name="android:background">#61a705</item> 
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:textColor">#3d6804</item>
	</style>
	<style name="scoreTableHeadText.player">
		<item name="android:layout_width">175px</item>
	</style>
	<style name="scoreTable">
		<item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">fill_parent</item>
	    <item name="android:padding">2px</item>
	    <item name="android:background">#5a9a06</item>
	</style>
	<style name="scoreTableBorder">
		<item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">fill_parent</item>
	    <item name="android:padding">1px</item>
	    <item name="android:layout_margin">10px</item>
	    <item name="android:background">#FFFFFF</item> 
	</style>
	<style name="scoreTableTitle">
		<item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>	
		<item name="android:src">@drawable/tetristopscore</item>
	</style>
	<style name="scoreTextField">
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:padding">2px</item>
		<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center_horizontal</item>
	</style>
	<style name="noScoresText" parent="@android:style/TextAppearance">
		<item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">italic</item>
		<item name="android:layout_weight">1</item>
	</style>
	<style name="newGameButton">
		<item name="android:layout_width">128px</item>
		<item name="android:layout_height">128px</item>
		<item name="android:src">@drawable/tetrisnewgamebutton</item>
		<item name="android:background">#00000000</item>
		<item name="android:layout_margin">10px</item>
	</style>
	<style name="exitAppButton">
		<item name="android:layout_width">128px</item>
		<item name="android:layout_height">128px</item>
		<item name="android:src">@drawable/tetrisquitappbutton</item>
		<item name="android:background">#00000000</item>
		<item name="android:layout_margin">10px</item>
	</style>
	<style name="centeringLayout">
		<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
	</style>
	<style name="centeringLayout.scoreTableTitle">
        <item name="android:layout_height">75px</item>
        <item name="android:gravity">center_horizontal|bottom</item>
	</style>
	<!-- Game Over -->
	<style name="gameOverLayout">
		<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/tetrismainscreenbg</item>
	</style>
	<style name="gameOverTitle">
		<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">75px</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32px</item>
	</style>	
	<style name="gameOverStatsTitle">
		<item name="android:textColor">#3d6804</item>
		<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20px</item>
	</style>
	<style name="gameOverStatsValue">
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">30px</item>
	</style>
	<style name="gameOverPlayerNameInput">
		<item name="android:layout_width">200px</item>
		<item name="android:layout_height">wrap_content</item> 
		<item name="android:maxLength">12</item>
		<item name="android:singleLine">true</item>
		<item name="android:layout_marginBottom">15px</item>
	</style>
	<style name="saveScoreButton" parent="@android:style/Widget.Button">
		<item name="android:layout_width">200px</item>
        <item name="android:layout_height">wrap_content</item>
	</style>
</resources>